<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!--Add phone contact button-->
    <Button
        android:id="@+id/add_phone_contacts_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Add Phone Contact"
        android:textColor="@android:color/black"
        app:layout_heightPercent="7%"
        app:layout_marginLeftPercent="1%"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="8%"
        app:layout_widthPercent="100%"
        android:background="@color/colorAccent" />

    <!--Read phone contact button-->
    <Button
        android:id="@+id/read_phone_contacts_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read Phone Contact"

        app:layout_heightPercent="7%"
        app:layout_marginLeftPercent="1%"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="16%"
        app:layout_widthPercent="100%"
        android:background="@color/colorAccent" />


    <!--List of "contacts" that will show up-->
    <ListView
        android:id="@+id/display_phone_ocntacts_list_view"
        android:layout_width="393dp"
        android:layout_height="633dp"

        android:cacheColorHint="@android:color/black"
        app:layout_heightPercent="65%"
        app:layout_marginTopPercent="25%">
    </ListView>

    <!--Instructions (Bottom left of screen)-->
    <TextView
        android:id="@+id/tvlpca"
        android:layout_width="93dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:text="This is the Phonebook page where you can Add and See your Contacts. Add a contact by clicking the button at the top of the screen. Or See Contacts you have added recently by clicking second button"
        android:visibility="invisible"/>

    <!--Help Button-->
    <Button
        android:id="@+id/sayitalpc"
        android:text="?"

        android:background="@android:color/holo_blue_dark"
        android:textSize="20sp"
        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="78%"
        app:layout_marginTopPercent="90%"
        percent:layout_widthPercent="20%"/>

    <!--Main heading for Phonebook Page/screen-->
    <TextView
        android:id="@+id/PhonebookH"
        android:text="Phonebook"
        android:textColor="@android:color/black"
        android:textSize="45sp"
        android:textStyle="bold"

        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="22%"
        app:layout_marginRightPercent="15%"
        app:layout_marginTopPercent="0%"
        app:layout_widthPercent="60%"/>

</android.support.percent.PercentRelativeLayout>