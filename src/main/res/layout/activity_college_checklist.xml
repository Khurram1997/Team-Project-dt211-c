<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollegeChecklist"
    android:background="#ffffff" >

    <!--College checklist heading-->
    <ImageButton
        android:id="@+id/checklistbutton4"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        percent:layout_heightPercent="9%"
        percent:layout_marginLeftPercent="40%"
        percent:layout_marginRightPercent="78%"
        percent:layout_marginTopPercent="88%"
        percent:layout_widthPercent="17%"
        percent:srcCompat="@drawable/check"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Tasks"
        android:textColor="@android:color/black"

        android:textSize="24sp"
        android:textStyle="bold"
        percent:layout_heightPercent="6%"
        percent:layout_marginLeftPercent="10%"
        percent:layout_marginRightPercent="50%"
        percent:layout_marginTopPercent="91%"
        percent:layout_widthPercent="30%"/>

    <TextView
        android:id="@+id/CollegeChecklistH"
        android:text="College Checklist         -> Suggestions"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"

        app:layout_heightPercent="16%"
        app:layout_marginLeftPercent="25%"
        app:layout_marginRightPercent="15%"
        app:layout_marginTopPercent="0%"
        app:layout_widthPercent="100%"/>

    <!--Help button to speak out instructions-->
    <Button
        android:id="@+id/sayitpd"
        android:text="?"
        android:textSize="20sp"

        android:background="@android:color/holo_blue_dark"
        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="78%"
        app:layout_marginTopPercent="90%"
        percent:layout_widthPercent="20%"/>

    <Button
        android:id="@+id/button5"
        android:background="#fdff6e"
        android:text="what i need to bring to college"
        android:textAllCaps="true"

        android:textStyle="bold|italic"
        app:layout_heightPercent="14%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="95%"
        app:layout_marginTopPercent="18%"
        app:layout_widthPercent="82%"/>

    <Button
        android:id="@+id/button6"
        android:background="#fdff6e"
        android:text="what i need to do before college (paperwork)"
        android:textAllCaps="true"

        android:textSize="13sp"
        android:textStyle="bold|italic"
        app:layout_heightPercent="14%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="95%"
        app:layout_marginTopPercent="36%"
        app:layout_widthPercent="82%"/>

    <Button
        android:id="@+id/button7"
        android:background="#fdff6e"
        android:text="timetable for college"
        android:textStyle="bold|italic"

        app:layout_heightPercent="14%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="95%"
        app:layout_marginTopPercent="54%"
        app:layout_widthPercent="82%"/>

    <!--INSTRUCTIONS-->
    <TextView
        android:id="@+id/tv6"
        android:layout_width="93dp"
        android:layout_height="76dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:text="This is the Moving College Checklist page. Tap the Checklist button at the bottom to add things to a, To Do List."
        android:visibility="invisible"/>

</android.support.percent.PercentRelativeLayout>