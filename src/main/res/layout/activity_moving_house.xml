<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MovingHouse">

    <!--<![CDATA[
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
    ]]>-->

    <!--MHousingH-->
    <TextView
        android:id="@+id/MHousingH"
        android:text="Housing"
        android:textColor="@android:color/black"
        android:textSize="50sp"
        android:textStyle="bold"

        app:layout_heightPercent="11%"
        app:layout_marginLeftPercent="25%"
        app:layout_marginRightPercent="15%"
        app:layout_marginTopPercent="0%"
        app:layout_widthPercent="60%"/>

    <!--Help button-->
    <Button
        android:id="@+id/sayit3"
        android:text="?"

        android:background="@android:color/holo_blue_dark"
        android:textSize="20sp"
        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="78%"
        app:layout_marginTopPercent="90%"
        percent:layout_widthPercent="20%"/>

    <!--INSTRUCTIONS-->
    <TextView
        android:id="@+id/tv3"
        android:layout_width="93dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:text="This is the Housing page. Tap the tick for  the house checklist. Or tap the button under the My Home logo to open thier website."
        android:visibility="invisible"/>

    <!--Checklist button to go to checklist screen-->
    <ImageButton
        android:id="@+id/checklistbutton"
        app:srcCompat="@drawable/check"

        app:layout_heightPercent="9%"
        app:layout_marginLeftPercent="38%"
        app:layout_marginRightPercent="78%"
        app:layout_marginTopPercent="20%"
        app:layout_widthPercent="17%"/>

    <!--Checklist heading-->
    <TextView
        android:id="@+id/checklists2"
        android:text="Checklist"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="45sp"
        android:textStyle="bold"

        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="20%"
        app:layout_marginRightPercent="95%"
        app:layout_marginTopPercent="32%"
        app:layout_widthPercent="65%"/>

    <!--Myhome logo-->
    <ImageView
        android:id="@+id/myhomelogo"
        app:srcCompat="@drawable/myhomelogo"

        app:layout_heightPercent="20%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginRightPercent="95%"
        app:layout_marginTopPercent="50%"
        app:layout_widthPercent="82%"/>

    <!--Webutton to get to myhome.ie website-->
    <Button
        android:id="@+id/webbutton"
        android:onClick="open"
        android:text="Open website myhome.ie"

        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="22%"
        app:layout_marginRightPercent="95%"
        app:layout_marginTopPercent="75%"
        app:layout_widthPercent="76%"
        android:background="@color/colorAccent"/>

    <!--Backbutton to o back to Hosuing Transition PAge-->
    <ImageButton
        android:id="@+id/BackbuttonP"
        app:srcCompat="@drawable/backbutton"

        app:layout_heightPercent="8%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginRightPercent="78%"
        app:layout_marginTopPercent="90%"
        app:layout_widthPercent="14%"/>

</android.support.percent.PercentRelativeLayout>